{
  "manifest_version": 3,
  "name": "SportScanner",
  "description": "Track live scores of your favorite teams in a bottom bar inside Edge.",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "host_permissions": ["https://example-scores-api.com/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.tsx"]
    }
  ]

}
