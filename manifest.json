{
    "manifest_version": 3,
    "name": "SportScanner",
    "description": "Track live scores of your favorite teams in a bar.",
    "version": "0.1.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "tabs"
    ],
    "host_permissions": [
        "https://sportscanner-proxy.semiultra.workers.dev/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https://a.espncdn.com;"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "src/content/index.tsx"
            ],
            "run_at": "document_idle"
        }
    ]
}